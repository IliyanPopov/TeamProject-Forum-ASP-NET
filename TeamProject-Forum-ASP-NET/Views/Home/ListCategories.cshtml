@model List<TeamProject_Forum_ASP_NET.Entities.Category>

@{
    ViewBag.Title = "ListCategories";
}

<div class="container">
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-lg-offset-2 col-sm-8 text-center text-uppercase">
                <p>
                    <h2>
                        @Html.ActionLink(string.Format($"{category.Name}"), "ListQuestionsByCategory", "Home", new { @categoryId = category.Id }, null)
                    </h2>
                </p>
            </div>
        }
    </div>
</div>
<hr />

