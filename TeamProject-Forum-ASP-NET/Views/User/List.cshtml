@model List<TeamProject_Forum_ASP_NET.Models.ApplicationUser>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="well">
        <h2>Users</h2>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Profile Photo</th>
                <th>ID</th>
                <th>Email</th>
                <th>User Name</th>
                <th>Posts Count</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    if (ViewBag.Admins.Contains(user.UserName))
                    {
                        @: <tr class="danger">
                    }
                    else
                    {
                        @: <tr>
                    }

                    var imgUrl = Url.Content("~/Content/Images/ProfilePhotos/" + user.UserName + ".png") + "?time=" + DateTime.Now.ToString();

                    <td><img src="@imgUrl" height="50" width="50" alt="Profile Picture" /></td>                   
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>@user.UserName</td>
                    <td>@user.PostsCount</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "User", new { @id = user.Id }, new { @class = "btn btn-xs btn-success" })
                        @Html.ActionLink("Delete", "Delete", "User", new { @id = user.Id }, new { @class = "btn btn-xs btn-danger" })
                    </td>
                }

</tbody>
        </table>
    </div>
</div>
