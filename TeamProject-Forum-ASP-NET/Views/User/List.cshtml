@using PagedList
@using PagedList.Mvc

@model IPagedList<TeamProject_Forum_ASP_NET.Models.ApplicationUser>
@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="well">
        <h2>Search Users by Username</h2>
        @using (Html.BeginForm("List", "User", FormMethod.Get, new { @class = "form-horizontal" }))
        {            
            <div class="form-group">
                <div class="col-sm-4">
                    @Html.TextBox("searchString",null, new { @class = "form-control col-sm-4" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4">
                    <input type="submit" value="Search" class="btn btn-success" />
                </div>
            </div>
        }
        <h2>Users</h2>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>User Name</th>
                    <th>Posts Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    if (ViewBag.Admins.Contains(user.UserName))
                    {
                        @:<tr class="danger">
                    }
                    else
                    {
                        @:<tr>
                    }

                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>@user.UserName</td>
                    <td>@user.PostsCount</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "User", new { @id = user.Id }, new { @class = "btn btn-xs btn-success" })
                        @Html.ActionLink("Delete", "Delete", "User", new { @id = user.Id }, new { @class = "btn btn-xs btn-danger" })
                    </td>
                }
            </tbody>
        </table>
        <div class="row col-sm-offset-2">
            @Html.PagedListPager(Model, page => Url.Action("List", new { page , searchString = Request.QueryString["searchString"] }),
               new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
        </div>
    </div>
</div>
