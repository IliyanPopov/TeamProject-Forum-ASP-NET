@model TeamProject_Forum_ASP_NET.Models.ApplicationUser

@{
    ViewBag.Title = "Delete User";
}

<div class="container body-content span-8 offset-2">
    <div class="well">
        <h2>@ViewBag.Title</h2>

        @using (Html.BeginForm("Delete", "User", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
              <label class = "control-label col-sm-4">Profile Photo</label>
                <div class="col-sm-4">
                   @{
                     var imgUrl = Url.Content("~/Content/Images/ProfilePhotos/" + Model.UserName + ".png") + "?time=" + DateTime.Now.ToString();
                    <img class ="col-sm-4" src="@imgUrl" height="100" width="100" alt="Profile Picture" />
                    } 
                
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-sm-4", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.FullName, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control col-sm-4", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-sm-4", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.PostsCount, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.PostsCount, new { @class = "form-control col-sm-4", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-4">
                    @Html.ActionLink("Cancel", "List", "User", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        }

    </div>
</div>
